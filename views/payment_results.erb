<h1>
Payment Results
</h1>
<%= params %>
<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @apr.to_fs(:percentage, {:precision => 4}) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @years %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @principal.to_fs(:currency) %>
  </dd>

  <dt>
    Monthly Payment
  </dt>
  <dd>
    <%= @monthly_payment %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
